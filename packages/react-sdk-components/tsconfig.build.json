{
  "extends": "../../tsconfig.build.json",
  "include": ["./src/**/*.js", "./src/**/*.jsx", "./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": [
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx",
    "./src/**/*.mock.ts",
    "./src/**/*.mock.tsx",
    "./src/**/*.mock.json",
    "./src/**/*.stories.ts",
    "./src/**/*.stories.tsx",
    "./src/docs/**",
    "./src/**/mocks/**",
    "./node_modules/**",
    "./src/samples/**"
  ],
  "compilerOptions": {
    "composite": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "noEmit": false
  },
  "references": [
    {
      "path": "./tsconfig.pkg.json"
    }
  ]
}
